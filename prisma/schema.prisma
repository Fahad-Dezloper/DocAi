generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  password String
  chat     Chat[]
  project  Project[]
  spaces   Spaces[]
}

model Chat {
  id        String  @id @default(uuid())
  createdAt DateTime @default(now())
  messages  Json?
  userId    String
  user      User @relation(fields: [userId], references: [id])
}

model Project {
  id           String  @id @default(uuid())
  name         String
  creatorName  String
  websiteLink  String   @unique
  description  String?
  createdAt    DateTime @default(now())
  userId       String
  spaceId      String 
  user         User @relation(fields: [userId], references: [id])
  spaces       ProjectSpace[]
}

model Spaces {
  id        String  @id @default(uuid())
  name      String
  icon      String
  createdAt DateTime @default(now())
  userId    String
  isDefault Boolean @default(false) @unique
  user      User @relation(fields: [userId], references: [id])
  projects   ProjectSpace[]
}

model ProjectSpace {
  projectId   String
  spaceId     String
  createdAt   DateTime   @default(now())
  project     Project   @relation(fields: [projectId], references: [id])
  space     Spaces   @relation(fields: [spaceId], references: [id])
  @@id([projectId, spaceId])
}